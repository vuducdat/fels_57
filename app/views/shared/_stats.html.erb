<% @user ||= current_user %>
<div class="stats">
  <strong id="following" class="stat">
    <%= @user.following.count %>
    <%= link_to t("title.following"), user_following_index_path(@user) %>
  </strong>
  <strong id="followers" class="stat">
    <%= @user.followers.count %>
    <%= link_to t("title.follower"), user_followed_index_path(@user) %>
  </strong>
</div>