<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title.header"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home2"), root_path %></li>
        <li><%= link_to t("title.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("title.user"), users_path %></li>
          <% if admin? %>
            <li class="dropdown">
              <%= link_to t("menu.mana"), "#mana_modal", class: "dropdown-toggle",
                data: {toggle: "dropdown"} %>   
              <ul class="dropdown-menu">
                <li><%= link_to t("menu.mana_users"), admin_users_path %></li>
                <li><%= link_to t("menu.mana_categories"), admin_categories_path %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <%= link_to t("menu.account"), "#account_modal", class: "dropdown-toggle", 
                data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t("menu.profile"), current_user %></li>
                <li><%= link_to t("menu.setting"), edit_user_path(current_user) %></li>
                <li>
                  <%= link_to t("title.logout"), logout_path, method: "delete",
                    data: {confirm: t("flash.logout")} %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("title.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>